<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER_LEFT" prefHeight="500.0" prefWidth="700.0" style="-fx-background-color: #f9cfff;" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="clientFx.RestaurantsController">
    <Button onAction="#infoButton" prefHeight="29.0" prefWidth="60.0" styleClass="btn-hover" stylesheets="@styles.css" text="info" textFill="WHITE">
      <VBox.margin>
         <Insets bottom="6.0" left="6.0" right="6.0" top="6.0" />
      </VBox.margin>
      <font>
         <Font name="System Bold" size="12.0" />
      </font>
      <cursor>
         <Cursor fx:constant="OPEN_HAND" />
      </cursor>
   </Button>
    <ScrollPane hbarPolicy="NEVER" prefHeight="476.0" prefWidth="700.0" scaleShape="false" styleClass="flowpane-background" stylesheets="@styles.css">
        <content>
            <FlowPane fx:id="flowPane" hgap="30.0" prefHeight="476.0" prefWidth="700.0" scaleShape="false" styleClass="flowpane-background" stylesheets="@styles.css" vgap="25.0">
            <padding>
               <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
            </FlowPane>
        </content>
    </ScrollPane>
</VBox>
